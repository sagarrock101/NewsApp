<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                 
                          
                                                             

                 
                            
                                                                           

                                                                

           
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_8sdp"
        android:layout_margin="@dimen/_8sdp"
        app:cardCornerRadius="@dimen/_8sdp"
         android:tag="layout-h480dp/item_news_card_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_news_card"
            android:layout_width="@dimen/_210sdp"
            android:layout_height="@dimen/_300sdp"
           >


            <ImageView
                android:id="@+id/iv_news_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_news"
                android:tag="binding_1"           
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:targetApi="lollipop" />

            <View
                android:id="@+id/view_alpha_layer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:background="@drawable/black_rounded_bg"
                app:layout_constraintBottom_toBottomOf="@id/iv_news_img"
                app:layout_constraintEnd_toEndOf="@id/iv_news_img"
                app:layout_constraintStart_toStartOf="@id/iv_news_img"
                app:layout_constraintTop_toTopOf="@id/iv_news_img" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:elegantTextHeight="true"
                android:ellipsize="end"
                android:lines="3"
                android:tag="binding_2"        
                android:textColor="@color/white"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_news_img"
                app:layout_constraintVertical_bias="0.85"
                tools:text="@string/hello_i_am_news" />

            <TextView
                android:id="@+id/tv_news_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/white"
                android:textStyle="bold"
                tools:text  = "news in cards"
                android:tag="binding_3"                
                                                        
                android:layout_marginBottom="@dimen/_8sdp"
                app:layout_constraintStart_toStartOf="@id/tv_title"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <ImageView
                android:id="@+id/iv_selector"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?android:attr/selectableItemBackground"
                app:layout_constraintBottom_toBottomOf="@id/iv_news_img"
                app:layout_constraintEnd_toEndOf="@id/iv_news_img"
                app:layout_constraintStart_toStartOf="@id/iv_news_img"
                app:layout_constraintTop_toTopOf="@id/iv_news_img" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
         