<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <variable
            name="newsHeadLines"
            type="com.sagarock101.database.model.NewsHeadLines" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_news_headlines"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/bgColor">

        <HorizontalScrollView
            android:id="@+id/horizontal_chip_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:checkedChip="@id/chip_all"
                app:chipSpacing="@dimen/_16sdp"
                app:selectionRequired="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_all"
                    style="@style/MyChip"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:text="@string/all"
                    android:textColor="?attr/textColor"
                    app:chipBackgroundColor="@drawable/bg_chip_selector" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_business"
                    style="@style/MyChip"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_45sdp"
                    android:text="@string/business"
                    android:textColor="?attr/textColor"
                    app:chipBackgroundColor="@drawable/bg_chip_selector"
                    app:chipIcon="@drawable/ic_suitcase" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_sports"
                    style="@style/MyChip"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_45sdp"
                    android:text="@string/sports"
                    android:textColor="?attr/textColor"
                    app:chipBackgroundColor="@drawable/bg_chip_selector"
                    app:chipIcon="@drawable/ic_running" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_health"
                    style="@style/MyChip"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_45sdp"
                    android:text="@string/health"
                    android:textColor="?attr/textColor"
                    app:chipBackgroundColor="@drawable/bg_chip_selector"
                    app:chipIcon="@drawable/ic_health" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_entertainment"
                    style="@style/MyChip"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_45sdp"
                    android:text="@string/entertainment"
                    android:textColor="?attr/textColor"
                    app:chipBackgroundColor="@drawable/bg_chip_selector"
                    app:chipIcon="@drawable/ic_theater" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_technology"
                    style="@style/MyChip"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_45sdp"
                    android:text="@string/technology"
                    android:textColor="?attr/textColor"
                    app:chipBackgroundColor="@drawable/bg_chip_selector"
                    app:chipIcon="@drawable/ic_technology" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_science"
                    style="@style/MyChip"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:text="@string/science"
                    android:textColor="?attr/textColor"
                    app:chipBackgroundColor="@drawable/bg_chip_selector"
                    app:chipIcon="@drawable/ic_atom" />

            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/rv_news"
            app:layout_constraintStart_toStartOf="@id/rv_news"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="@dimen/card_vertical_constraint_bias">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <include layout="@layout/shimmer_layout_news_card" />

                    <include layout="@layout/shimmer_layout_news_card" />

                    <include layout="@layout/shimmer_layout_news_card" />

                    <include layout="@layout/shimmer_layout_news_card" />

                    <include layout="@layout/shimmer_layout_news_card" />

                    <include layout="@layout/shimmer_layout_news_card" />

                    <include layout="@layout/shimmer_layout_news_card" />

                    <include layout="@layout/shimmer_layout_news_card" />

                    <include layout="@layout/shimmer_layout_news_card" />

                    <include layout="@layout/shimmer_layout_news_card" />

                    <include layout="@layout/shimmer_layout_news_card" />

                    <include layout="@layout/shimmer_layout_news_card" />

                    <include layout="@layout/shimmer_layout_news_card" />

                    <include layout="@layout/shimmer_layout_news_card" />

                    <include layout="@layout/shimmer_layout_news_card" />

                    <include layout="@layout/shimmer_layout_news_card" />

                </LinearLayout>

            </HorizontalScrollView>
        </com.facebook.shimmer.ShimmerFrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="@dimen/card_vertical_constraint_bias"
            tools:listitem="@layout/item_news_card" />

        <ru.tinkoff.scrollingpagerindicator.ScrollingPagerIndicator
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_70sdp"
            android:layout_marginStart="@dimen/_20sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:spi_dotSelectedColor="?attr/btmIconAndTextColor"
            app:spi_dotSelectedSize="@dimen/_10sdp"
            app:spi_dotSize="@dimen/_8sdp"
            app:spi_dotSpacing="@dimen/_10sdp"
            app:spi_visibleDotThreshold="5" />

        <include
            android:id="@+id/layout_no_network"
            layout="@layout/layout_no_network"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            bind:listSize ="@{newsHeadLines.totalResults}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>