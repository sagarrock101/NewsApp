<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LightTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorDarkPrimary_Light</item>
        <item name="colorPrimaryVariant">@color/colorDarkPrimary_Light</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:fontFamily">@font/karla_variable_font_wght</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="textColor">@android:color/black</item>
        <item name="bgColor">@color/white</item>
        <item name="btmIconAndTextColor">@color/colorPrimary</item>
    </style>

    <style name="DarkTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDarkStatus</item>
        <item name="colorPrimaryDark">@color/purple</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fontFamily">@font/karla_variable_font_wght</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="textColor">@color/white</item>
        <item name="bgColor">@color/black_dull</item>
        <item name="btmIconAndTextColor">@color/purple</item>
        <item name="actionOverflowButtonStyle">@style/actionOverflowButtonStyle</item> <!-- sets the style for the overflow button -->
    </style>

    <style name="AppTheme.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- THIS is where you can color the arrow and the overflow button! -->
    </style>

    <style name="actionOverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?attr/textColor</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorDarkPrimary_Light</item>
        <item name="colorPrimaryVariant">@color/colorDarkPrimary_Light</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:fontFamily">@font/karla_variable_font_wght</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="ripple_glow_with_padding_white">
        <item name="android:clickable">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/ripple_bg_white</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ripple_glow_with_padding_silver">
        <item name="android:clickable">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/ripple_bg_silver</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="MyChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipCornerRadius">12dp</item>
        <item name="paddingStart">10dp</item>
        <item name="paddingEnd">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/SmallerText</item>
    </style>

    <style name="SmallerText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyScaleSize">
        <item name="android:scaleX">0.8</item>
        <item name="android:scaleY">0.8</item>
    </style>

    <style name="LightThemeDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="textColorAlertDialogListItem">@android:color/black</item>
    </style>

    <style name="DarkThemeDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>