<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorDarkPrimary</item>
        <item name="colorPrimaryVariant">@color/colorDarkPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:fontFamily">@font/karla_variable_font_wght</item>
    </style>

    <style name="ripple_glow_with_padding">
        <item name="android:clickable">true</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/ripple_bg</item>
        <item name="android:focusable">true</item>
    </style>
</resources>